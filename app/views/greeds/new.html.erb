
<%= stylesheet_link_tag 'greeds/new', :media => "all" %>

<main>
	<div class="container">
		<div class="row">
			<div class="col-lg-6">
				<h4>一覧</h4>
				<table class="table">
					<% @greeds.each do |greed| %>
					<%= form_for greed, url: greed_path(greed.id) do |g| %>
					<tr>
						<th><%= g.text_field :id %></th>
						<th><%= attachment_image_tag greed, :greed_image_name, :fill, 40, 40, format: 'jpeg' %></th>
						<th><%= g.attachment_field :greed_image_name %></th>
						<th><%= g.text_field :greed_type %></th>
						<th><%= g.submit 'Update Greed' %></th>
						<th><%= link_to "Destroy", greed_path(greed.id), method: :delete, "data-confirm" => "本当に削除しますか?" %></th>
					</tr>
					<% end %>
					<% end %>
				</table>
			</div>

			<div class="col-lg-6">
				<h3>欲カテゴリー追加</h3>
				<%= form_for @greed, url: greeds_path do |f| %>
				<table class='table'>
				  	<tr>
				    	<th><%= f.label :category %><th>
				    	<th><%= f.text_field :greed_type %></th>
				  	</tr>
				  	<tr>
				    	<th><%= f.label :image %><th>
				    	<th><%= f.attachment_field :greed_image_name %></th>
				  	</tr>
				</table>
				<%= f.submit "Create Greed" %>
				<% end %>
			</div>
		</div>
	</div>
</main>

