<!DOCTYPE html>
<html>
  <head>
    <title>GreedIsland</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if @greed_flag != true %>
    <!-- ヘッダー -->
    <nav class="navbar navbar-default">
      <div class="container-fluid">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navigation">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <div class= "navbar-brand">
            <% if user_signed_in? %>
              <%= link_to '欲望.com', products_path(current_user.greed.id) %>
            <% else %>
              <%= link_to '欲望.com', greeds_path %>
            <% end %>
          </div>
        </div>
        <% if @search_form_flag == true %>
          <div class="search_form">
            <%= form_tag search_products_path, :method => 'get' do %> <%#　projects_pathはモデル名で読みかえること %>
            <p>
              <%= text_field_tag :search, params[:search] %>
              <%= submit_tag "Search", :product_name => nil %>
            </p>
          <% end %>
          </div>
        <% end %>

        <% if user_signed_in? %>
          <div class="header-text">
            <p><%= current_user.first_name %>でログイン中</p>
          </div>
        <% end %>

        <div id="gnavi" class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
            <% if user_signed_in? %>
              <li><%= link_to 'トップ', greeds_path, class: "" %></li>
              <li><%= link_to 'マイページ', user_path(current_user.id), class: "" %></li>
              <li><%= link_to 'カート', cart_items_path, class: "" %></li>
              <li><%= link_to 'ログアウト', destroy_user_session_path, method: :delete,
                   "data-confirm" => "本当にログアウトしますか？", class: "" %></li>
            <% elsif administrator_signed_in? %>
              <li><%= link_to '商品追加', new_product_path, class: "" %></li>
              <li><%= link_to '商品一覧', products_path, class: "" %></li>
              <li><%= link_to '顧客一覧', admin_user_index_path, class: "" %></li>
              <li><%= link_to '注文一覧', orders_path, class: "" %></li>
              <li><%= link_to 'ログアウト', destroy_administrator_session_path, method: :delete,
                   "data-confirm" => "本当にログアウトしますか？", class: "" %></li>
            <% else %>
              <li><%= link_to '管理者用ログイン', new_administrator_session_path, class: "" %></li>
              <li><%= link_to '管理者登録', new_administrator_registration_path, class: "" %></li>
              <li><%= link_to 'トップ', greeds_path, class: "" %></li>
              <li><%= link_to 'ログイン', new_user_session_path, class: "" %></li>
              <li><%= link_to '会員登録', new_user_registration_path, class: "" %></li>
            <% end %>
          </ul>
      </div>
    </div>

    </nav>
    <% if alert %><p class="alert alert-danger"><%= alert %></p><% end %>
    <% if notice %><p class="alert alert-danger"><%= notice %></p><% end %>
    <% end %>

    <%= yield %>

    <% if @greed_flag != true %>
    <!-- フッター -->
    <div class="clearfix"></div>
    <footer class="clearfix">
      <ul id="nav2" class="nav navbar-nav">
      <% if user_signed_in? %>
        <li><%= link_to '利用規約', service_path, class: "" %></li>
        <li><%= link_to 'プライバシーポリシー', privacy_path, class: "" %></li>
        <li><%= link_to 'お問い合わせ先', contact_path, class: "" %></li>
        <li><%= link_to '退会', user_path(current_user.id), class: "" %></li>
      <% end %>
    </ul>
    <div class="copy">
       <p>CopyRight Infratop.inc</p>
    </div>
    </footer>
    <% end %>

  </body>
</html>
