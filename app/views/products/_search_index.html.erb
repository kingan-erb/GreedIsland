
	<div class="main(仮)">
		<% @products.each do |product| %>
			<div class="product-box">
				<div class="product-image">
					<%= link_to product_path(product.id) do %>
						<%= attachment_image_tag product,:product_image_name, :fill,100,100 %>
					<% end %>
				</div>
				<div class="product-text">
					<!-- とりあえず全部pタグ -->
					<% case product.inventry_status
      					when 0 then
							inventry = '×'
						when 1..10 then
							inventry = product.inventry_status
						when 11..30 then
							inventry = '△'
						else
							inventry = '◯'
						end %>
					<p>アーティスト：<%= product.artist_name %></p>
					<p>シングル/アルバム名：<%= product.product_name %></p>
					<p>価格：<%= product.price %></p>
					<p>在庫：<%= inventry %></p>
				<!-- 仮に設置 -->
				</div>
			</div>
		<% end %>
	</div>
<%= paginate @products %>
<%= @products.total_count %>件中<%= @products.offset_value %>〜<%= @products.offset_value + @products.length %>件を表示しています。