
<%= stylesheet_link_tag 'products/admin_new', :media => "all" %>

<main>
	<div class="container">
		<div class="row">
		 	<h4><%= link_to "カテゴリー作成",  new_greed_path %></h4>
		</div>
		<div class="row">
		 	<div class="col-lg-6">
				<h3>新規商品追加</h3>
				<%= form_for @product, url: admin_products_path, class: 'form-horizontal' do |f| %>
				<table class='table'>
				  	<tr>
				    	<th><%= f.label :product_image_name, "画像" %><th>
				    	<th><%= f.attachment_field :product_image_name %></th>
				  	</tr>
				  	<tr>
				    	<th><%= f.label :greed_id, "欲カテゴリー" %><th>
				    	<th><span class="product-input"><%= f.select :greed_id,[['金',1],['癒',2],['力',3],['食',4],['愛',5]] %></span></th>
				  	</tr>
				  	<tr>
				    	<th><%= f.label :artist_name, "アーティスト名" %><th>
				    	<th><span class="product-input"><%= f.text_field :artist_name %></span></th>
				  	</tr>
				  	<tr>
				    	<th><%= f.label :product_name, "シングル/アルバム名" %><th>
				    	<th><span class="product-input"><%= f.text_field :product_name %></span></th>
				  	</tr>
				  	<tr>
				    	<th><%= f.label :label_name, "レーベル名" %><th>
				    	<th><span class="product-input"><%= f.select :label_name, Product.label_names.keys.to_a, {} %></span></th>
				  	</tr>
				  	<tr>
				    	<th><%= f.label :genre_name, "ジャンル" %><th>
				    	<th><span class="product-input"><%= f.select :genre_name, Product.genre_names.keys.to_a, {} %></span></th>
				  	</tr>
				  	<tr>
				    	<th><%= f.label :price, "値段" %><th>
				    	<th><span class="product-input"><%= f.text_field :price %></span></th>
				  	</tr>
				  	<tr>
				    	<th><%= f.label :inventry_status, "在庫数" %><th>
				    	<th><span class="product-input"><%= f.text_field :inventry_status %></span></th>
				  	</tr>
				</table>
			</div>

			<div class="col-lg-6">
				<div class="row add-product-field">
					<%= f.submit '確定', class: 'square_btn' %>
				</div>
			</div>
			<div class="col-lg-6">
				<h4 class="music">曲</h4>
				<table class="table">
					<thead>
						<tr>
							<th>Disk</th>
							<th>曲名</th>
							<th></th>
							<th colspan="3"></th>
						</tr>
					</thead>

					<tbody>
						<%= f.nested_fields_for :musics, wrapper_tag: :tr do |m| %>
							<td><%= m.select :disk_number,[['Disk1',1],['Disk2',2],['Disk3',3],['Disk4',4]] %></td>
							<td><%= m.text_field :music_name %></td>
							<td><%= m.remove_nested_fields_link '削除', class: 'square_btn2', role: 'button' %><td>
						<% end %>
					</tbody>
				</table>
				<%= f.add_nested_fields_link :musics, '曲追加', class: 'part_line', role: 'button' %>
			</div>
				<% end %>
		</div>
	</div>
</main>

