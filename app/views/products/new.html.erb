
<%= link_to "一覧へ", products_path %><br>
商品追加
<%= form_for @product, url: products_path, class: 'form-horizontal' do |f| %>
	<!-- 仮にbootstrap方式 -->
<div class="box">
	<div class="container-fluid">
		<div class="row">
			<div class="col-ls-6">
				<%= f.label :product_image_name, "画像" %><br />
				<%= f.attachment_field :product_image_name %>
			</div>
			<div class="col-ls-6">
				<!-- 型の指定はまだ -->
				<%= f.label :greed_id, "欲カテゴリー" %>
				<span class="product-input"><%= f.select :greed_id,[['金',1],['癒',2],['力',3],['食',4],['愛',5]] %></span><br />
				<%= f.label :artist_name, "アーティスト名" %>
					<span class="product-input"><%= f.text_field :artist_name %></span><br />
				<%= f.label :product_name, "シングル/アルバム名" %>
					<span class="product-input"><%= f.text_field :product_name %></span><br />
				<%= f.label :label_name, "レーベル名" %>
				<span class="product-input"><%= f.select :label_name, Product.label_names.keys.to_a, {} %>
				</span><br />
				<%= f.label :genre_name, "ジャンル" %><span class="product-input">
					<%= f.select :genre_name, Product.genre_names.keys.to_a, {} %>
				</span><br />
				<%= f.label :price, "値段" %><span class="product-input"><%= f.text_field :price %></span><br />
				<%= f.label :inventry_status, "在庫数" %><span class="product-input"><%= f.text_field :inventry_status %></span><br />
			</div>
		</div>
	</div>
</div>


<div class="box">
曲追加
<table>
	<thead>
		<tr>
			<th>Disk</th>
			<th>Music_name</th>
			<th></th>
			<th colspan="3"></th>
		</tr>
	</thead>

	<tbody>
		<%= f.nested_fields_for :musics, wrapper_tag: :tr do |m| %>
			<td><%= m.select :disk_number,[['Disk1',1],['Disk2',2],['Disk3',3],['Disk4',4]], class: 'form-control' %></td>
			<td><%= m.text_field :music_name, class: 'form-control' %></td>
			<td><%= m.remove_nested_fields_link 'Delete', class: 'btn btn-danger', role: 'button' %><td>
		<% end %>
	</tbody>
</table>
<%= f.add_nested_fields_link :musics, 'Add new', class: 'btn btn-primary', role: 'button' %>
</div>

	<div class="row add-product-field">
		<%= f.submit '商品追加', class: 'btn btn-primary' %>
	</div>
<% end %>
</div>
