<%= stylesheet_link_tag 'products/recommend' %>

<div class="body">
	<div class="title">
		<h2>あなたを満たすCDは...</h2>
	</div>
	<div class="products-box">
		<% @products.shuffle.first(3).each do |product| %>
			<div class="product">
				<%= link_to product_path(product.id) do %>
					<%= attachment_image_tag product, :product_image_name, :fill, 220, 220, format: 'jpeg' %>
					<div class="product-mask">
						<div class="caption">
							<p><%= product.product_name %></p>
							<p><%= product.artist_name %></p>
						</div>
					</div>
				<% end %>
			</div>
		<% end %>
	</div>
	<div class="link-box">
		<div class="">
			<!-- <p>欲しいものがない？</p> -->
			<%= link_to '→ もっとみる', products_path(@greed.id), class: "products-show" %>
		</div>
	</div>
</div>
