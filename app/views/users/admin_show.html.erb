
<div class="box">
	<%= link_to "一覧へ", admin_user_index_path, class: "btn-sm" %>
	<%= link_to "編集へ", edit_admin_user_path(@user.id), class: "btn-sm" %>
	<h4>顧客情報詳細</h4>
	<table class='table'>
	<p>登録内容</p>
	  	<tr>
	    	<th>お名前</th>
	    	<th><%= @user.last_name %> <%= @user.first_name %> (<%= @user.last_name_kana %> <%= @user.first_name_kana %>)</th>
	  	</tr>
	  	<tr>
	    	<th>メールアドレス</th>
	    	<th><%= @user.email %></th>
	  	</tr>
	  	<tr>
	   	 	<th>電話番号</th>
	    	<th><%= @user.phone_number %></th>
	  	</tr>
	  	<tr>
	    	<th>私の欲</th>
	    	<th><%= @user.greed.greed_type %></th>
	  	</tr>
	  	<tr>
	    	<th>お支払い方法</th>
	    	<th><% if @user.payment_method == 1 %>代引き<% else %>銀行振込<% end %></th>
	  	</tr>
	</table>

	<p>登録住所</p>
	<table class='table'>
		<% nos = 1..@user.addresses.length %>
		<% @addresses.zip(nos).each do |address, no| %>
	  <tr>
	  	<td><% if @user.default_address == no %>選択中<% end %></td>
	    <td><%= address.postal_code %></td>
	    <td><%= address.address %></td>
	    <td><%= link_to "削除", address_destroy_path(address.id), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn-sm btn-danger" %></td>
	  </tr>
	  	<% end %>
	</table>
</div>

