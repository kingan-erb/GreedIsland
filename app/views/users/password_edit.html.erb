<!-- 読み込むscssファイル -->
<%= stylesheet_link_tag "users/password_edit", :media => "all" %>

<main class="main">
  <div class="for-background">
    <div class="container-wrapper">
      <%= form_for(@user, :url => { :action => "password_update" } ) do |f| %>
        <div class="containers">
          <section class="first-container">
            <div class="form-title">
              <h2>パスワード変更画面</h2>
            </div>
            <div class="field">
              <%= f.label :password %><br><i>（変更しない場合は入力不要）</i><br />
              <%= f.password_field :password, autocomplete: "off", size: "30" %>
              <% if @minimum_password_length %>
                <em><%= @minimum_password_length %> 文字以上</em>
              <% end %>
            </div>

            <div class="field">
              <%= f.label :password_confirmation %><br><i>（新しいパスワード（再確認用））</i><br />
              <%= f.password_field :password_confirmation, autocomplete: "off", size: "30" %>
            </div>

            <div class="field">
              <%= f.label :current_password, "現在のパスワード" %><br />
              <%= f.password_field :current_password, autocomplete: "off", size: "30" %>
            </div>

            <div class="buttons">
              <%= f.submit "更新する", class: "update-button" %>
              <%= link_to "前に戻る", edit_user_path, class: "back-button" %>
            </div>
          </section>
        </div>
      <% end %>
    </div>
  </div>
</main>
