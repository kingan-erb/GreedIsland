<!-- 読み込むscssファイル -->
<%= stylesheet_link_tag "users/registrations/new", :media => "all" %>

<!-- navメニューのmargin,borderによる空白を相談 -->
<main class="main">
  <div class="for-background">
    <div class="container-wrapper">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <div class="containers">
          <section class="first-container">
            <div class="form-title">
              <div class="sign-up active">
                新規登録
              </div>
              <div class="sign-in">
                <%= link_to "ログイン", new_user_session_path %>
              </div>
            </div>
            <div class="field">
              <%= f.label :email  %><span> ※</span><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email", size: "30" %>

              <% if resource.errors[:email].any? %>
                <div class="devise-alert">
                  <ul>
                    <% resource.errors.full_messages_for(:email).each do |message| %>
                    <li><%= message %></li>
                    <% end %>
                  </ul>
                </div>
              <% end %>

            </div>

            <div class="field">
              <%= f.label :password %>
              <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> 文字以上)</em><span> ※</span>
              <% end %><br />
              <%= f.password_field :password, autocomplete: "off", size: "30" %>

              <% if resource.errors[:password].any? %>
                <div class="devise-alert">
                  <ul>
                    <% resource.errors.full_messages_for(:password).each do |message| %>
                    <li><%= message %></li>
                    <% end %>
                  </ul>
                </div>
              <% end %>

            </div>

            <div class="field">
              <%= f.label :password_confirmation %><span> ※</span><br />
              <%= f.password_field :password_confirmation, autocomplete: "off", size: "30" %>

              <% if resource.errors[:password_confirmation].any? %>
                <div class="devise-alert">
                  <ul>
                    <% resource.errors.full_messages_for(:password_confirmation).each do |message| %>
                    <li><%= message %></li>
                    <% end %>
                  </ul>
                </div>
              <% end %>

            </div>
          </section>

          <section class="second-container">
            <div class="field">
              <%= f.label :last_name %><br />
              <%= f.text_field :last_name, autofocus: true, autocomplete: "off", placeholder: "姓（漢字）", size: "30" %>

              <% if resource.errors[:last_name].any? %>
                <div class="devise-alert">
                  <ul>
                    <% resource.errors.full_messages_for(:last_name).each do |message| %>
                    <li><%= message %></li>
                    <% end %>
                  </ul>
                </div>
              <% end %>

            </div>

            <div class="field">
              <%= f.label :first_name %><br />
              <%= f.text_field :first_name, autofocus: true, autocomplete: "off", placeholder: "名（漢字）", size: "30" %>

              <% if resource.errors[:first_name].any? %>
                <div class="devise-alert">
                  <ul>
                    <% resource.errors.full_messages_for(:first_name).each do |message| %>
                    <li><%= message %></li>
                    <% end %>
                  </ul>
                </div>
              <% end %>

            </div>

            <div class="field">
              <%= f.label :last_name_kana %><br />
              <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "off", placeholder: "姓（カナ）", size: "30" %>

              <% if resource.errors[:last_name_kana].any? %>
                <div class="devise-alert">
                  <ul>
                    <% resource.errors.full_messages_for(:last_name_kana).each do |message| %>
                    <li><%= message %></li>
                    <% end %>
                  </ul>
                </div>
              <% end %>

            </div>

            <div class="field">
              <%= f.label :first_name_kana %><br />
              <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "off", placeholder: "名（カナ）", size: "30" %>

              <% if resource.errors[:first_name_kana].any? %>
                <div class="devise-alert">
                  <ul>
                    <% resource.errors.full_messages_for(:first_name_kana).each do |message| %>
                    <li><%= message %></li>
                    <% end %>
                  </ul>
                </div>
              <% end %>
            </div>

            <div class="field">
              <%= f.fields_for :addresses do |g| %>
                <div class="postal-code">
                  <%= g.label :postal_code, "郵便番号" %><br />
                  <%= g.text_field :postal_code, autofocus: true, autocomplete: "off", placeholder: "ハイフン不要", size: "30" %><br />
                  <% if resource.errors[:postal_code].any? %>
                    <div class="devise-alert">
                      <ul>
                        <% resource.errors.full_messages_for(:postal_code).each do |message| %>
                        <li><%= message %></li>
                        <% end %>
                      </ul>
                    </div>
                  <% end %>
                </div>
                <div class="address">
                  <%= g.label :address, "住所" %><br />
                  <%= g.text_area :address, autofocus: true, autocomplete: "off", size: "29x3" %>
                  <% if resource.errors[:address].any? %>
                    <div class="devise-alert">
                      <ul>
                        <% resource.errors.full_messages_for(:address).each do |message| %>
                        <li><%= message %></li>
                        <% end %>
                      </ul>
                    </div>
                  <% end %>
                </div>
              <% end %>
            </div>

            <div class="field">
              <%= f.label :phone_number %><br />
              <%= f.text_field :phone_number, autofocus: true, autocomplete: "off", placeholder: "ハイフン不要", maxlength: 11, size: "30" %>
              <% if resource.errors[:phone_number].any? %>
                <div class="devise-alert">
                  <ul>
                    <% resource.errors.full_messages_for(:phone_number).each do |message| %>
                    <li><%= message %></li>
                    <% end %>
                  </ul>
                </div>
              <% end %>
            </div>

            <div class="field">
              <%= f.label :payment_method %><br />
              <%= f.radio_button :payment_method, 1, :checked => true %>代引き
              <%= f.radio_button :payment_method, 2 %>銀行振込
            </div>

            <div class="field">
              <%= f.label :greed_id %><br />
              <%= f.select :greed_id,[['金',1],['癒',2],['力',3],['食',4],['愛',5]] %>
            </div>

            <div class="actions">
              <%= f.submit "新規登録", class: "button" %>
            </div>
          </section>
        </div>
      <% end %>
    </div>
  </div>
</main>